<div id="<%= dom_id deposit %>">
  <div class="flex justify-between">
    <p class="my-5">
      <strong class="block font-medium mb-1">Value:</strong>
      <%= deposit.value %>
    </p>

    <p class="my-5">
      <strong class="block font-medium mb-1">User:</strong>
      <%= deposit.user_id %>
    </p>

    <p class="my-5">
      <strong class="block font-medium mb-1">Date:</strong>
      <%= deposit.date %>
    </p>
  </div>

  <% if action_name != "show" %>
    <%= link_to "Show this deposit", deposit, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this deposit", edit_deposit_path(deposit), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
