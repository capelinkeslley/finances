<div class='max-w-my-xl mx-auto'>
   <h1 class="font-medium indent-1 text-3xl text-justify mb-5">Login</h1>
  <%= form_with(url: '/') do |form| %>
    <div class="max-w-sm">
      <div class="grid grid-cols-1 gap-y-5 gap-x-4 sm:grid-cols-2">
        <div class="sm:col-span-6">
          <%= form.label 'Nome', class: 'block text-sm font-medium text-gray-700' %>
          <div class="flex rounded-md shadow-sm">
            <%= form.text_field :email, value: @name, class: 'w-full flex-1 focus:ring-purple focus:border-purple block w-full min-w-0 rounded-md sm:text-sm border-gray-300' %>
          </div>
        </div>
        <div class="sm:col-span-6 ">
          <%= form.label 'E-mail', class: 'block text-sm font-medium text-gray-700' %>
          <div class="flex rounded-md shadow-sm">
            <%= form.text_field :password, class: 'w-full flex-1 focus:ring-purple focus:border-purple block w-full min-w-0 rounded-md sm:text-sm border-gray-300' %>
          </div>
        </div>
      </div>
    <div class="pt-5 flex justify-end">
      <%= form.submit 'Entrar',class: "w-full text-1xl inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>
</div>